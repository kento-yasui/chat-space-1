.sidebar
  .side-header
    .side-header__box
      = current_user.name
    %ul.side-header__box__menu
      %li.side-header__box__menu__create-group
        = link_to new_group_path do
          = icon( "fa", "edit", class: "icon_color")
      %li.side-header__box__menu__edit-user
        = link_to edit_user_path(current_user) do
          = icon("fa", "cog", class: "icon_color")
  .groups
    - current_user.groups.each do |group|
    .group
      = link_to group_messages_path(group) do
        .group__name
          = group.name
        .group__messages
          message_preview